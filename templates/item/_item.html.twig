<div class="card mb-4">

   {% if item.filename %}

        <img src="{{ vich_uploader_asset(item, 'imageFile' ) | imagine_filter('thumb') }}" alt="card-img-top" style="width:100%; height: auto;">
        {% else %}
        <img src="{{ 'images/items/empty.jpg' | imagine_filter('thumb') }}" alt="card-img-top" style="width:100%; height: auto;">

    {% endif %}
    <div class="card-body">

        <h5 class="card-title">
            <a href="{{ path('item.show', {id: item.id, slug: item.slug })}}">
            {{item.title}} </a>
        </h5>

        {#<p class="card-text"> {{ property.description | nl2br }} </p>#}
        <p class="card-text"> {{ item.content}}</p>

    
    </div>

</div>