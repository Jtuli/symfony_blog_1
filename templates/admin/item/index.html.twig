{% extends 'base.html.twig' %}

{% block title 'Gérer les articles'%}

{% block body %}

    <div class="container mt-4">
          <h1> Gérer les articles </h1>

          {% for message in app.flashes('success') %}
                <div class="alert alert-success"> {{ message }}</div>

          {% endfor %}
       
        <table class="table table-stripped">
            <thead>
            <tr>
                <th>Nom de l'article</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
              {% for item in items %}
              
             
                <tr>
            
                </div>
            
                    <td>{{ item.title }}</td>
                    <td>
                        <a href=" {{ path('admin.item.edit', {id: item.id }) }}" class="btn btn-secondary">Editer</a>

                        <form method="post" action="{{ path('admin.item.delete', {id: item.id }) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr ?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                        <button class="btn btn-danger">Supprimer</button></form>
                        
                    </td>

                </tr>
             {% endfor %}
            </tbody>
        </table>

        <div class="text-right">
            <a href=" {{ path('admin.item.new') }}" class="btn btn-primary">Créer un article</a>
        </div>

    </div>

    

{% endblock %}