{% extends 'base.html.twig' %}

{% block title 'Gérer les articles'%}



{% block body %}

{% include 'admin/admin_panel.html.twig' %}

    <div class="container mt-4">
          <h1> Gérer les articles </h1>

          {% for message in app.flashes('success') %}
                <div class="alert alert-success"> {{ message }}</div>

          {% endfor %}
       
        <table class="table table-stripped">
            <thead>
            <tr>
                <th>Nom du tag</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
              {% for tag in tags %}
              
             
                <tr>
            
                </div>
            
                    <td>{{ tag.name }}</td>
                    <td>
                        <a href=" {{ path('admin.tag.edit', {id: tag.id }) }}" class="btn btn-secondary">Editer</a>

                        <form method="post" action="{{ path('admin.tag.delete', {id: tag.id }) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr ?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                        <button class="btn btn-danger">Supprimer</button></form>
                        
                    </td>

                </tr>
             {% endfor %}
            </tbody>
        </table>

        <div class="text-right">
            <a href=" {{ path('admin.tag.new') }}" class="btn btn-primary">Créer un tag</a>
        </div>

    </div>

    

{% endblock %}